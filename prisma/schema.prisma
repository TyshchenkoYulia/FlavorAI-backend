datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  recipes  Recipe[]
}

model Recipe {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}
